package com.booking.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.client.RestTemplate;

import com.booking.model.HelloWorld;

@RestController
public class HelloworldController {	
	
	@Autowired
	private RestTemplate restTemplate;
	
	
	
	@RequestMapping("/hellworld/{hell}")
	public List<String> getHelloWorld(@PathVariable("hell")) {
		
		HelloWorld helloWorld= restTemplate.getForObject("http://localhost:8001/hellworld", HelloWorld.class);
		return helloWorld().;
		
		
	}	
	
	

}
